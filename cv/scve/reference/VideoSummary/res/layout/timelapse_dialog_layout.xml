<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:text="Video playback speed"
        android:textColor="@android:color/black"
        android:textSize="@dimen/timelapseSettingsTextsize" />


    <SeekBar
        android:id="@+id/seekBarSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="4"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:paddingStart="@dimen/seekBarCircleHalf"
        android:paddingEnd="@dimen/seekBarCircleHalf"
        android:progressDrawable="@drawable/speed_progress"
        android:thumb="@drawable/speed_scrubber"
        android:max="4" />

    <include
        layout="@layout/video_speed_ticks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_gray_line_color"
        android:orientation="vertical">
    </LinearLayout>


    <Switch
        android:id="@+id/event_detect_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:text="Event Detection"
        android:textSize="@dimen/timelapseSettingsTextsize" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_gray_line_color"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/event_speed_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:text="Event playback speed"
        android:textColor="@android:color/black"
        android:textSize="@dimen/timelapseSettingsTextsize" />

    <SeekBar
        android:id="@+id/seekBarEventSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:paddingStart="@dimen/seekBarCircleHalf"
        android:paddingEnd="@dimen/seekBarCircleHalf"
        android:progressDrawable="@drawable/speed_progress"
        android:thumb="@drawable/speed_scrubber"
        android:max="4" />

    <include
        android:id="@+id/seekBarEventTicks"
        layout="@layout/video_speed_ticks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_gray_line_color"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/detect_events_textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:text="Detect the following events"
        android:textColor="@android:color/black"
        android:textSize="@dimen/timelapseSettingsTextsize"
        android:enabled="false" />

    <CheckBox
        android:id="@+id/motionCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:text="Motion" />

    <CheckBox
        android:id="@+id/facesCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:text="Faces" />

</LinearLayout>