<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto">

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="#707070" />
            <stroke android:width="4dp" android:color="#A0A0A0" />
        </shape>
    </item>

    <item my:state_record_mode="true" my:state_recording="true">
        <shape android:shape="oval">
            <solid android:color="#FF5050" />
            <stroke android:width="4dp" android:color="#FF0000" />
        </shape>
    </item>

    <item my:state_record_mode="true">
        <shape android:shape="oval">
            <solid android:color="#00AA00" />
            <stroke android:width="4dp" android:color="#006000" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#7070FF" />
            <stroke android:width="4dp" android:color="#0000FF" />
        </shape>
    </item>

</selector>


