set -e

case "$1" in
  start)
    echo -n "Starting pdmapper service "
    start-stop-daemon -S -b -a /usr/bin/pdmapper
    echo "done"
    ;;
  stop)
    echo -n "Stopping pdmapper service "
    start-stop-daemon -K -n pdmapper
    echo "done"
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage pdmappersvc { start | stop | restart }" >&2
    exit 1
    ;;
esac

exit 0
