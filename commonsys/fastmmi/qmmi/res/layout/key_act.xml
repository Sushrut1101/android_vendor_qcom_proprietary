<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/case_top"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/case_title"
            layout="@layout/case_title" />

        <LinearLayout
            android:id="@+id/volume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/case_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/volume_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/keypad_volume_up"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/volume_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/keypad_volume_down"
                android:textSize="20dip" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/keypad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volume"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/keypad_power"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/recentapps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/keypad_recentapps"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/softkey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keypad"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/keypad_home"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/keypad_back"
                android:textSize="20dip" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/case_bottom"
        layout="@layout/case_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
