<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="240dp">
    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/fr_share_settings_title"/>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@android:id/title"/>
    <LinearLayout
        android:id="@+id/fr_share_settings_button_bar"
        style="?android:buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/list"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:clickable="false"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fr_share_settings_just_once"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/fr_share_settings_button_just_once"/>
        <Button
            android:id="@+id/fr_share_settings_always"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/fr_share_settings_button_always"/>
    </LinearLayout>
</RelativeLayout>