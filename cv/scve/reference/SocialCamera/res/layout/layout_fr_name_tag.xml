<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/fr_name_tag_background">
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/fr_name_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/fr_name_tag_confidence_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:paddingEnd="5dp"
        android:src="@drawable/fr_name_tag_confidence"
        android:contentDescription="@android:string/untitled"
        tools:ignore="RtlSymmetry"/>
    <LinearLayout
        android:id="@+id/fr_name_tag_action_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fr_name_tag_transparent_ripple"
        android:clickable="true"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="#47ffffff"/>
        <ImageView
            android:id="@+id/fr_name_tag_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:duplicateParentState="true"
            android:src="@drawable/fr_name_tag_action"
            android:contentDescription="@android:string/untitled"/>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>