<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
            android:id="@+id/startBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/str_start_flp_session" />

    <ListView
            android:id="@+id/batchList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/startBtn"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray">
    </ListView>

    <Button
            android:id="@+id/stopBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/startBtn"
            android:text="@string/str_stop_flp_session" />

    <Button
            android:id="@+id/switchModeBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/stopBtn"
            android:text="@string/str_switch_flp_session" />

    <Button
            android:id="@+id/pullLocationsBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/switchModeBtn"
            android:text="@string/str_pull_locations" />
</RelativeLayout>
