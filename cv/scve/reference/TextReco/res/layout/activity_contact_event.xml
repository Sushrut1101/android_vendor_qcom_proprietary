<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/field_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light" >

    <LinearLayout
        android:id="@+id/upper_part_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/upper_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_normal"
            android:orientation="vertical"
            android:paddingBottom="35dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp" >

            <ImageView
                android:id="@+id/avatar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@android:string/untitled"
                android:paddingBottom="10dp"
                android:paddingTop="16dp"
                android:src="@drawable/ic_default_avatar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lower_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="35dp"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:id="@+id/list_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:onClick="onScanMore"
                    android:contentDescription="@android:string/untitled"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_camera_big" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onAddField"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@android:string/untitled"
                    android:padding="8dp"
                    android:src="@drawable/btn_add_field" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
