<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg.content"
    >

    <!--
    ###############################################################
    ### Top Title
    ############################################################### -->
    <FrameLayout
        style="@style/VoiceWakeup.Layout.TopTitleBar"
        android:id="@+id/soundmodeldetails_top_title"
        android:focusableInTouchMode="true"
        >

        <TextView
            style="@style/VoiceWakeup.Layout.TopTitleBar.Content"
            android:text="@string/soundmodeldetails_top_title"
            />
    </FrameLayout>

    <!--
    ###############################################################
    ### CONTENTS
    ############################################################### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/soundmodeldetails_smname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/soundmodeldetails_smtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textStyle="bold"
            android:text="@string/soundmodeldetails_smtype"
            />

        <View
             style="@style/VoiceWakeup.Layout.SeparatorH.bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg.content"
            >

            <LinearLayout
                android:id="@+id/soundmodeldetails_soundmodellinearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>