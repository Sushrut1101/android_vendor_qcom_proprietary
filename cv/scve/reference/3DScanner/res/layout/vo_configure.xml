    <Button
        android:id="@+id/buttonStartScan"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="0"
        android:onClick="onButtonStartScan"
        android:text="@string/StartScan" />

    <CheckBox
        android:id="@+id/chkLiveTracking"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="0dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/useLiveTracking" />

    <CheckBox
        android:id="@+id/chkMotionSensor"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="50dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/useMotionSensor" />
    <CheckBox
        android:id="@+id/chkHrImage"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/useHrImage" />
    <CheckBox
        android:id="@+id/chkAutoHrImg"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="150dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/useAutoHrImg" />
    <CheckBox
        android:id="@+id/chkMotionConstraint"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="200dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/UseMotionConstraint" />
    <CheckBox
        android:id="@+id/chkPrevFrameKeyFrame"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="250dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/UsePrevFrameKF" />
    <CheckBox
        android:id="@+id/chkIsDumpImgs"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="300dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/IsDumpImgs" />
    <CheckBox
        android:id="@+id/chkIsTSDF"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="350dp"
        android:layout_row="0"
        android:onClick="onCheckboxClicked"
        android:text="@string/UseTsdf" />

</GridLayout>