<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/editor_account_header" />

    <com.qualcomm.qti.simcontacts.widget.EditorKindSectionView
        android:id="@+id/contact_name"
        app:deletable="false"
        app:editorInputType="text"
        app:editorHint="@string/editor_name_entry_hint"
        app:sectionDrawable="@drawable/quantum_ic_person_vd_theme_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.qualcomm.qti.simcontacts.widget.EditorKindSectionView
        android:id="@+id/contact_phone"
        app:editorInputType="phone"
        app:editorHint="@string/editor_phone_entry_hint"
        app:sectionDrawable="@drawable/quantum_ic_phone_vd_theme_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.qualcomm.qti.simcontacts.widget.EditorKindSectionView
        android:id="@+id/contact_anrs"
        app:editorHint="@string/editor_phone_entry_hint"
        app:editorInputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.qualcomm.qti.simcontacts.widget.EditorKindSectionView
        android:id="@+id/contact_emails"
        app:editorHint="@string/editor_email_entry_hint"
        app:sectionDrawable="@drawable/quantum_ic_email_vd_theme_24"
        app:editorInputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>