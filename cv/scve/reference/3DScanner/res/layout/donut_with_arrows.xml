<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/guidance_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/donut"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ring"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/up_arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/donut"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_view4"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_up" />

            <ImageView
                android:id="@+id/image_view5"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_up" />

            <ImageView
                android:id="@+id/image_view6"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_up" />

            <ImageView
                android:id="@+id/image_view7"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_up" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/left_arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/donut"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_view0"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_left" />

            <ImageView
                android:id="@+id/image_view1"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_left" />

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_left" />

            <ImageView
                android:id="@+id/image_view3"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/donut"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_view8"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_right" />

            <ImageView
                android:id="@+id/image_view9"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_right" />

            <ImageView
                android:id="@+id/image_view10"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_right" />

            <ImageView
                android:id="@+id/image_view11"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingLeft="@dimen/arrow_padding"
                android:paddingRight="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/down_arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donut"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_view12"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_down" />

            <ImageView
                android:id="@+id/image_view13"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_down" />

            <ImageView
                android:id="@+id/image_view14"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_down" />

            <ImageView
                android:id="@+id/image_view15"
                android:layout_width="@dimen/arrow_layout_width"
                android:layout_height="@dimen/arrow_layout_height"
                android:paddingBottom="@dimen/arrow_padding"
                android:paddingTop="@dimen/arrow_padding"
                android:src="@drawable/vector_drawable_triangle_down" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
