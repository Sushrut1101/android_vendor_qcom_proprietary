<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/editControls"
android:layout_margin="16dp"
android:visibility="gone">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">

    <ImageButton
        android:padding="12dp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonTop"
        android:src="@drawable/ic_cube_view_top"
        android:background="@drawable/ic_cube_background"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:padding="12dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonFront"
            android:src="@drawable/ic_cube_view_front"
            android:background="@drawable/ic_cube_background"/>

        <ImageButton
            android:padding="12dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonSide"
            android:src="@drawable/ic_cube_view_side"
            android:background="@drawable/ic_cube_background"/>

    </LinearLayout>



</LinearLayout>

</RelativeLayout>