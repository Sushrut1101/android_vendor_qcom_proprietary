<resources>
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <item name="android:textViewStyle">@style/AppTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="CameraPreviewActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:keepScreenOn">true</item>
    </style>

    <style name="PictureReviewActivityTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:buttonStyle">@style/PictureReviewButtonStyle</item>
    </style>

    <style name="FRShareSettingsPopupTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:popupWindowStyle">@style/FRShareSettingsPopupWindowStyle</item>
        <item name="android:borderlessButtonStyle">@style/FRShareSettingsBorderlessButtonStyle</item>
    </style>

    <style name="FRShareSettingsPopupWindowStyle" parent="android:Widget.DeviceDefault.PopupWindow">
        <item name="android:popupBackground">@drawable/fr_popup_background</item>
    </style>

    <style name="FRShareSettingsBorderlessButtonStyle" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textAppearance">@style/FRShareSettingsButtonTextStyle</item>
    </style>

    <style name="PictureReviewButtonStyle" parent="android:Widget.DeviceDefault.Light.Button">
        <item name="android:textAppearance">@style/PictureReviewButtonTextStyle</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppTextStyle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#55000000</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="PictureReviewButtonTextStyle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/picture_review_button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FRNameTagPopupItemTextStyle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/fr_name_popup_item_text</item>
    </style>

    <style name="FRShareSettingsButtonTextStyle" parent="android:TextAppearance.DeviceDefault.Widget.Button">
        <item name="android:textColor">@color/fr_share_settings_button_text</item>
    </style>
</resources>
