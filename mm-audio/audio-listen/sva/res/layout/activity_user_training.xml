<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/training_user_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/mic_normal" />
    <TextView
        android:id="@+id/training_user_instruction_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/training_user_mic"
        android:layout_centerHorizontal="true"
        style="@style/User.Text.Training.Instructional"
        android:text="@string/user_training_say" />
    <TextView
        android:id="@+id/training_user_instruction_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/training_user_instruction_line1"
        android:layout_centerHorizontal="true"
        style="@style/User.Text.Training.Instructional"
        android:text="@string/user_training_keyphrase" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/training_user_progress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_1" />
        <ImageView
            android:id="@+id/training_user_progress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unfinished_2" />
        <ImageView
            android:id="@+id/training_user_progress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unfinished_3" />
        <ImageView
            android:id="@+id/training_user_progress4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unfinished_4" />
        <ImageView
            android:id="@+id/training_user_progress5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unfinished_5" />
    </LinearLayout>
</RelativeLayout>