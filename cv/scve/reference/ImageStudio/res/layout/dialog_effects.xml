<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/single_dialog_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/effects_help" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/walkthrough_textview_height"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/single_dialog_imageView"
        android:layout_below="@+id/single_dialog_imageView"
        android:background="@android:color/white"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/effects_help"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_text_size" />

    <View
        android:id="@+id/div_d"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView5"
        android:background="@color/view_divider_color_2" />

    <include
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/div_d"
        layout="@layout/close_row" />

</RelativeLayout>
