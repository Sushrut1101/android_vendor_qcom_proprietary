<TableRow
    android:id="@+id/detection_advanceddetail_tablerow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >

	<TextView
        android:id="@+id/detection_advanceddetail_keyworduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/detection_advanceddetail_keyworduser"
        />
    <TextView
        android:id="@+id/detection_num_detections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/detection_advanceddetail_initialdetections"
        />
	<ProgressBar
        android:id="@+id/detection_confidencelevel_bar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="0dp"
		android:layout_height="10dp"
		android:layout_weight="1"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_gravity="center_vertical"
		/>
    <TextView
        android:id="@+id/detection_confidencelevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/detection_advanceddetail_initialscore"
        />
    <TextView
        android:id="@+id/detection_confidencelevelpossible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/detection_advanceddetail_scorepossible"
        />
</TableRow>
