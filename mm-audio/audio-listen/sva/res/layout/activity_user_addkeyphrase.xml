<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/addkeyphrase_tv_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:layout_margin="18dp"
            style="@style/User.Text.Instructional"
            android:text="@string/user_addkeyphrase_instruction" />
        <EditText
            android:id="@+id/addkeyphrase_et_userkeyphrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textSize="16sp"
            android:singleLine="true"
            style="@style/User.Text.Instructional" />
            />
        <TextView
            android:id="@+id/addkeyphrase_tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:layout_margin="18dp"
            style="@style/User.Text.Instructional"
            android:text="@string/user_addkeyphrase_tips" />
    </LinearLayout>
<include layout="@layout/bottombar" />
</RelativeLayout>