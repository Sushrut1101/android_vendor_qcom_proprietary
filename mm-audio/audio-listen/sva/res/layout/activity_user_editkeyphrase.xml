<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qualcomm.qti.sva.ux.user.EditKeyphraseActivity"
    >
    <LinearLayout
        android:id="@+id/editkeyphrase_ll_titlebar"
        style="@style/UserTheme.Layout.TitleBar" >
        <TextView
            android:id="@+id/editkeyphrase_tv_keyphrasename"
            style="@style/User.Text.TitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/keyphrase" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/editkeyphrase_ll_action"
        style="@style/UserTheme.Layout.2itemlistitem"
        android:onClick="selectAction" >
        <TextView
            style="@style/User.Text.ListItem.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editkeyphrase_action"
            />
        <TextView
            android:id="@+id/editkeyphrase_tv_actiondesc"
            style="@style/User.Text.ListItem.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/none"
            />
    </LinearLayout>
    <View style="@style/VoiceWakeup.Layout.SeparatorH" />
    <LinearLayout
        android:id="@+id/editkeyphrase_ll_userverification"
        style="@style/UserTheme.Layout.2itemlistitem"
        android:onClick="showDialogSetUserVerification" >
        <TextView
            style="@style/User.Text.ListItem.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editkeyphrase_userverification"
            />
        <TextView
            android:id="@+id/editkeyphrase_tv_userverificationdesc"
            style="@style/User.Text.ListItem.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_editkeyphrase_userverification_off"
            />
    </LinearLayout>
    <View style="@style/VoiceWakeup.Layout.SeparatorH" />
    <LinearLayout
        android:id="@+id/editkeyphrase_ll_deletekeyphrase"
        style="@style/UserTheme.Layout.1itemlistitem"
        android:onClick="showDialogDeleteKeyphrase" >
        <TextView
            style="@style/User.Text.ListItem.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editkeyphrase_tv_deletekeyphrase" />
    </LinearLayout>
    <View style="@style/VoiceWakeup.Layout.SeparatorH" />
</LinearLayout>