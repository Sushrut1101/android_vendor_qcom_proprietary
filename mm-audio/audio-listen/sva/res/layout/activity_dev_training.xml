<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg.content"
    >

    <!--
    ###############################################################
    ### Footer layout
    ###############################################################  -->
    <View
        android:id="@+id/training_footer_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/training_footer_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_footer_repeat"
       />

    <!--
    ###############################################################
    ### Welcome layout
    ###############################################################  -->
	<RelativeLayout
		android:id="@+id/layout_training_welcome"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        >

	        <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        >


			    ###############################################################
			    ### Top Title
			    ###############################################################
	            <LinearLayout
			        style="@style/VoiceWakeup.Layout.TopTitleBar"
			        android:orientation="horizontal"
			        >


			        <TextView
			            style="@style/VoiceWakeup.Layout.TopTitleBar.Content"
			            android:id="@+id/training_username"
			            android:text="@string/training_unknownuser"
			            android:layout_gravity="center_vertical"
			            android:paddingLeft="@dimen/body_all"
			            android:drawableLeft="@drawable/training_title"
			            android:drawablePadding="@dimen/body_all"
			            android:textAppearance="@style/VoiceWakeup.Font.TopTitle"
			            />
			    </LinearLayout>


			    ###############################################################
			    ### Notice
			    ###############################################################
				<LinearLayout
			        style="@style/VoiceWakeup.Layout.Section"
			        android:orientation="vertical"
			        android:padding="@dimen/body_all"
			        >

					<TextView
					    android:id="@+id/training_welcomeNotice"
			            android:layout_width="match_parent"
			        	android:layout_height="wrap_content"
			            android:textColor="#333"
			            android:textSize="18sp"
			            android:paddingBottom="@dimen/body_all"
                        android:text="@string/training_welcomenotice"
			            />

					<LinearLayout
			            android:layout_width="match_parent"
			        	android:layout_height="wrap_content"
			        	android:orientation="vertical"
			        	android:background="@drawable/bg_training_box"
					    >
						<TextView
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:paddingLeft="@dimen/content_all"
						    android:paddingRight="@dimen/content_all"
						    android:paddingBottom="@dimen/content_all"
						    android:textAppearance="@style/VoiceWakeup.Font.Notice.Title"
						    android:text="@string/training_welcome_recording_tip_title"
						    />

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:orientation="horizontal"
						    android:paddingLeft="@dimen/content_all"
						    android:paddingRight="@dimen/content_all"
						    android:paddingBottom="@dimen/content_all"
						    >

						    <TextView
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="top"
							    android:paddingRight="@dimen/content_all"
							    android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
					            android:text="@string/training_one"
					            />

						    <TextView
							    android:layout_width="0dp"
							    android:layout_height="wrap_content"
							    android:layout_weight="1"
							    android:layout_gravity="top"
							    android:paddingRight="@dimen/content_all"
							    android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
					            android:text="@string/training_welcome_recording_tip1"
					            />
						</LinearLayout>

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:orientation="horizontal"
						    android:paddingLeft="@dimen/content_all"
						    android:paddingRight="@dimen/content_all"
						    android:paddingBottom="@dimen/content_all"
						    >

						    <TextView
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="top"
							    android:paddingRight="@dimen/content_all"
							    android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
					            android:text="@string/training_two"
					            />

						    <TextView
							    android:layout_width="0dp"
							    android:layout_height="wrap_content"
							    android:layout_weight="1"
							    android:layout_gravity="top"
							    android:paddingRight="@dimen/content_all"
							    android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
					            android:text="@string/training_welcome_recording_tip2"
					            />
						</LinearLayout>

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:orientation="horizontal"
						    android:paddingLeft="@dimen/content_all"
						    android:paddingRight="@dimen/content_all"
						    android:paddingBottom="@dimen/content_all"
						    >

						    <TextView
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="top"
							    android:paddingRight="@dimen/content_all"
							    android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
					            android:text="@string/training_three"
					            />

						    <TextView
							    android:layout_width="0dp"
							    android:layout_height="wrap_content"
							    android:layout_weight="1"
							    android:layout_gravity="top"
							    android:paddingRight="@dimen/content_all"
							    android:textAppearance="@style/VoiceWakeup.Font.Notice.Content"
					            android:text="@string/training_welcome_recording_tip3"
					            />
						</LinearLayout>

					</LinearLayout>
				</LinearLayout>
		    </LinearLayout>
		</ScrollView>
	</RelativeLayout>


    ###############################################################
    ### Tap Mic Text
    ###############################################################
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/training_layoutMic"
	    android:layout_marginBottom="10dp"
	    android:text="@string/training_tapMic"
	    android:textAppearance="@style/VoiceWakeup.Font.KeyPhrase.Users"
	    />


    ###############################################################
    ### For disable welcome layout
    ###############################################################
    <View
        android:id="@+id/layout_training_disableview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/training_footer_background"
        android:visibility="invisible"
        android:background="@color/bg_disableview" />


    ###############################################################
    ### Recording layout
    ###############################################################
	<RelativeLayout
		android:id="@+id/layout_training_record"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/training_footer_background"
		android:layout_centerHorizontal="true"
		android:visibility="invisible"
		android:background="@drawable/recording_popup_bg"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		>


	    ###############################################################
	    ###
	    ###############################################################
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:paddingTop="8dp"
	        >


		    ###############################################################
		    ### Top Recording state
		    ###############################################################
		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
		        android:background="@drawable/bg_recording_popup_title"
		        android:tileMode="repeat"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
	            >

	            <TextView
	                style="@style/VoiceWakeup.Font"
	                android:id="@+id/training_recording_state"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:paddingLeft="10dp"
	                android:textSize="22sp"
	                android:textStyle="bold"
	                android:textColor="#333"
	                android:gravity="center_vertical"
	                />

	            <ImageButton
	                android:id="@+id/training_recording_close"
	                android:src="@drawable/popup_close"
	                android:scaleType="fitXY"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="10dp"
	                android:layout_gravity="center"
	                android:background="@color/transparent"
	                />
			</LinearLayout>

		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1px"
		        android:background="@drawable/bg_recording_popup_dot_line"
		        />


		    ###############################################################
		    ### Key phrase
		    ###############################################################

		    <TextView
		        style="@style/VoiceWakeup.Layout.Section"
		        android:id="@+id/training_keyphrase"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:text="@string/home_keyphrase_message"
		        android:background="@drawable/bg_stroke_blue_heaby"
		        android:textAppearance="@style/VoiceWakeup.Font.Recording.Keyphrase"
		        />


		    ###############################################################
		    ### Recording Success Count
		    ###############################################################
		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="10dp"
		        >
	            <View
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/training_recordingHeaderLine_height"
	                android:layout_centerInParent="true"
	                android:background="@color/bg.recording_line"
	                android:layout_marginLeft="@dimen/body_leftRight"
	                android:layout_marginRight="@dimen/body_leftRight"
	                />

			    <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="@dimen/training_recordingCounterImage_height"
	                android:layout_centerInParent="true"
			        android:orientation="horizontal"
			        >

			        <ImageView
			            android:id="@+id/training_record1"
			            android:src="@drawable/recording_1_gray"
			            android:scaleType="fitXY"
			            android:layout_width="@dimen/training_recordingCounterImage_width"
			            android:layout_height="@dimen/training_recordingCounterImage_width"
			            android:layout_marginRight="@dimen/training_recordingCounterImage_paddingRight"
			            android:background="@drawable/recording_step_off"
			            />

			        <ImageView
			            android:id="@+id/training_record2"
			            android:src="@drawable/recording_2_gray"
			            android:scaleType="fitXY"
			            android:layout_width="@dimen/training_recordingCounterImage_width"
			            android:layout_height="@dimen/training_recordingCounterImage_height"
			            android:layout_marginRight="@dimen/training_recordingCounterImage_paddingRight"
			            android:background="@drawable/recording_step_off"
			            />

					<ImageView
			            android:id="@+id/training_record3"
			            android:src="@drawable/recording_3_gray"
			            android:scaleType="fitXY"
			            android:layout_width="@dimen/training_recordingCounterImage_width"
			            android:layout_height="@dimen/training_recordingCounterImage_height"
			            android:layout_marginRight="@dimen/training_recordingCounterImage_paddingRight"
			            android:background="@drawable/recording_step_off"
			            />

					<ImageView
			            android:id="@+id/training_record4"
			            android:src="@drawable/recording_4_gray"
			            android:scaleType="fitXY"
			            android:layout_width="@dimen/training_recordingCounterImage_width"
			            android:layout_height="@dimen/training_recordingCounterImage_height"
			            android:layout_marginRight="@dimen/training_recordingCounterImage_paddingRight"
			            android:background="@drawable/recording_step_off"
			            />

					<ImageView
			            android:id="@+id/training_record5"
			            android:src="@drawable/recording_5_gray"
			            android:scaleType="fitXY"
			            android:layout_width="@dimen/training_recordingCounterImage_width"
			            android:layout_height="@dimen/training_recordingCounterImage_height"
			            android:background="@drawable/recording_step_off"
			            />
			    </LinearLayout>
			</RelativeLayout>

		    ###############################################################
		    ### Result Notice
		    ###############################################################
		    <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="100dp"
		        >

		        <TextView
		            style="@style/VoiceWakeup.Layout"
		            android:id="@+id/training_recording_notice"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:visibility="invisible"
		            android:gravity="center_horizontal"
		            android:textStyle="bold"
		            android:text="@string/training_recording_notice_bad"
		            android:textSize="20sp"
		            />

		        <Button
		            style="@style/VoiceWakeup.Layout.Button.Blue"
		            android:id="@+id/training_recording_continue"
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="40dp"
		            android:layout_marginRight="40dp"
		            android:text="@string/training_recording_continue"
		            android:textColor="@color/text.white"
		            android:visibility="invisible"
		            />

		    </FrameLayout>

	    </LinearLayout>

	</RelativeLayout>


