<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="180dip"
    android:layout_height="180dip"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="180dip"
    android:minWidth="180dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#efefef"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/modelImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/profile"
                android:src="@drawable/profile" />
        </RelativeLayout>

        <TextView
            android:id="@+id/modelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:text="@string/ModelName"
            android:textColor="@color/colorCardTextPrimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/createdTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:text="@string/CreatedDate"
            android:textColor="@color/colorCardTextSecondary"
            android:textSize="16dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/modelThumbChecker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/model_checkbox_selector"
        android:gravity="center"
        android:scaleType="center" />

</android.support.v7.widget.CardView>