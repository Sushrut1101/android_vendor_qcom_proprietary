<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <!--
    ###############################################################
    ### Left side
    ###############################################################  -->

    <LinearLayout
        android:id="@+id/listitem_user_keyphrase_layoutleft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:paddingTop="@dimen/content_all"
        android:paddingBottom="@dimen/content_all"
        >

        <!--
        ###############################################################
        ### Keyphrase Checkbox
        ###############################################################  -->
        <CheckBox
            android:id="@+id/listitem_user_keyphrase_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/body_all"
            android:layout_marginRight="@dimen/body_all"
            android:clickable="false"
            />

        <!--
        ###############################################################
        ### Keyphrase Name and Action
        ###############################################################  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/content_all"
            android:layout_marginBottom="@dimen/content_all"
            >

            <TextView
                android:id="@+id/listitem_keyphrase_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="@style/VoiceWakeup.Font.Listitem.Name"
                />
            <TextView
                android:id="@+id/listitem_keyphrase_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="@style/VoiceWakeup.Font.Listitem.Desc"
                />
        </LinearLayout>
    </LinearLayout>

    <!--
    ###############################################################
    ### Right side
    ###############################################################  -->
    <FrameLayout
        android:id="@+id/listitem_keyphrase_layoutright"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_user_list_item"
        android:clickable="true"
        >

        <!--
        ###############################################################
        ### Right image
        ###############################################################  -->

        <ImageView
            android:id="@+id/listitem_keyphrase_image"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_gear" />

    </FrameLayout>
</LinearLayout>