            android:id="@+id/selectaction_tv_keyphrasename"
            style="@style/User.Text.TitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/keyphrase" />
    </LinearLayout>
    <TextView
        android:id="@+id/selectaction_tv_instruction"
        style="@style/User.Text.Instructional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="@string/selectaction_instruction" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

