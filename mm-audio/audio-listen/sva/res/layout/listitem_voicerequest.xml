<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_voicerequest_toplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <!--
    ###############################################################
    ### Leftside
    ###############################################################  -->

    <LinearLayout
        android:id="@+id/listitem_voicerequest_layoutleft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/selector_list_item"
        android:paddingTop="@dimen/content_all"
        android:paddingBottom="@dimen/content_all"
        >

        <!--
        ###############################################################
        ### Key Phrase Name and User-Indepedentness
        ###############################################################  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/content_all"
            android:layout_marginBottom="@dimen/content_all"
            >

            <TextView
                android:id="@+id/listitem_voicerequest_smname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="@style/VoiceWakeup.Font.Listitem.Name"
                />
            <TextView
                android:id="@+id/listitem_voicerequest_recordtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="@style/VoiceWakeup.Font.Listitem.Desc"
                />
        </LinearLayout>
    </LinearLayout>


    <!--
    ###############################################################
    ### Seperator
    ###############################################################  -->
    <!-- <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/seperator"
        /> -->

    <!--
    ###############################################################
    ### Right side
    ###############################################################  -->
    <FrameLayout
        android:id="@+id/listitem_voicerequest_layoutright"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_list_item"
        >

        <!--
        ###############################################################
        ### Right image
        ###############################################################  -->
        <ImageView
            android:id="@+id/listitem_voicerequest_image"
            android:scaleType="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/play"
            />

    </FrameLayout>
</LinearLayout>