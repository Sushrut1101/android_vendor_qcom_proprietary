<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>

	<!--
    ###############################################################
    ###
    ###############################################################  -->
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_alignParentTop="true"
	    android:layout_above="@id/users_footer"
	    android:background="@color/bg.content"
	    >

		<!--
		###############################################################
		### Top Title
		############################################################### -->
		<FrameLayout
		    style="@style/VoiceWakeup.Layout.TopTitleBar"
		    >

		    <TextView
		    	style="@style/VoiceWakeup.Layout.TopTitleBar.Content"
		    	android:text="@string/voicerequests_title"
		    	/>
		</FrameLayout>

		<!--
		###############################################################
		### Sound Models List
		############################################################### -->
		<ListView
		    android:id="@+id/list_voicerequests"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/bg.content"
			/>
	</LinearLayout>
</RelativeLayout>