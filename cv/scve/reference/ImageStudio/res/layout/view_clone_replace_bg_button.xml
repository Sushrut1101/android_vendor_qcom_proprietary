<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/clone_replace_bg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/untitled"
        android:paddingBottom="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:src="@drawable/icon_replace_bg_selector" />

    <TextView
        android:id="@+id/clone_replace_bg_button_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:paddingLeft="19dp"
        android:paddingRight="0dp"
        android:text="@string/clone_replace_background"
        android:textColor="@color/common_done_button"
        android:textSize="13sp" />

</FrameLayout>
