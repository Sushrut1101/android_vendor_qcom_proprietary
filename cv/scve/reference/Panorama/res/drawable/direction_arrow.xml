<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:state_capturing="true" app:state_direction_negative="true">
        <selector>
            <item app:state_speed_medium="true" android:drawable="@drawable/left_arrow_medium_speed_animation" />
            <item app:state_speed_fast="true" android:drawable="@drawable/left_arrow_high_speed_animation" />
            <item android:drawable="@drawable/left_arrow_normal_speed_animation" />
        </selector>
    </item>

    <item app:state_capturing="true" app:state_direction_positive="true">
        <selector>
            <item app:state_speed_medium="true" android:drawable="@drawable/right_arrow_medium_speed_animation" />
            <item app:state_speed_fast="true" android:drawable="@drawable/right_arrow_high_speed_animation" />
            <item android:drawable="@drawable/right_arrow_normal_speed_animation" />
        </selector>
    </item>

    <item app:state_capturing="true" android:drawable="@drawable/still_arrow_animation" />

    <item android:drawable="@drawable/dual_arrows" />

</selector>
