<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
            android:id="@+id/addBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/str_proximity_geofencelisttab_add" />

    <Button
            android:id="@+id/recoverAllBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/addBtn"
            android:text="@string/str_proximity_geofencelisttab_recover" />

    <ListView
            android:id="@+id/geofenceList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/recoverAllBtn"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray">
    </ListView>

    <Button
            android:id="@+id/editBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/addBtn"
            android:text="@string/str_proximity_geofencelisttab_edit" />

    <Button
            android:id="@+id/delBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/editBtn"
            android:text="@string/str_proximity_geofencelisttab_delet" />

    <Button
            android:id="@+id/pauseBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/delBtn"
            android:text="@string/str_proximity_geofencelisttab_pause" />

    <Button
            android:id="@+id/resumeBtn"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pauseBtn"
            android:text="@string/str_proximity_geofencelisttab_resume" />
</RelativeLayout>
