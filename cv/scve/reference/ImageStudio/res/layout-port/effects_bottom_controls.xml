<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/effects_bottom_controls"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="@string/effects_background_toolbox"
        android:textColor="#a1a1a1"
        android:textSize="10sp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:fadingEdgeLength="@dimen/scroll_view_fade_edge_length"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:requiresFadingEdge="horizontal" >

        <LinearLayout
            android:id="@+id/effects_background_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <include layout="@layout/effects_background_effects" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
