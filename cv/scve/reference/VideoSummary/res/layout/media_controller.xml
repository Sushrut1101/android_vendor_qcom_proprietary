<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton android:id="@+id/pause"
           android:src="@drawable/ic_pause"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:max="100"
            android:layout_margin="10dp"
            android:layout_width="@dimen/video_player_icon_size"
            android:layout_height="@dimen/video_player_icon_size"/>

        <SeekBar
            android:id="@+id/mediacontroller_seekbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_line"
            android:thumb="@drawable/seekbar_scrubber"
            />



        <ImageButton android:id="@+id/fullscreen"
            android:src="@drawable/ic_fullscreen_arrows"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:layout_width="@dimen/video_player_icon_size"
            android:layout_height="@dimen/video_player_icon_size" />

    </LinearLayout>

</LinearLayout>