<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sub_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
        android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
        android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
        android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
        android:text="@string/length_settings_sub_title"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/radio_group_video_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="Variable Length"
            android:textColor="?attr/colorAccent"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/length_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="@string/length_short" />

        <RadioButton
            android:id="@+id/length_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="@string/length_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="Max Length"
            android:textColor="?attr/colorAccent"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/length_six_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="@string/length_six_sec" />

        <RadioButton
            android:id="@+id/length_fifteen_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="@string/length_fifteen_sec" />

        <RadioButton
            android:id="@+id/length_thirty_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/timelapseSettingsHorizMargin"
            android:layout_marginLeft="@dimen/timelapseSettingsVertMargin"
            android:layout_marginRight="@dimen/timelapseSettingsVertMargin"
            android:layout_marginTop="@dimen/timelapseSettingsHorizMargin"
            android:text="@string/length_thirty_Sec" />
    </RadioGroup>
</LinearLayout>