<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/wear_stream_rate_dialog"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:orientation="vertical">

      <Button android:layout_height="wrap_content"
              android:text="@string/wear_delay_normal"
              android:id="@+id/wear_delay_button_normal"
              android:layout_width="wrap_content"
              style="?android:attr/buttonBarButtonStyle">
      </Button>
      <Button
            android:id="@+id/wear_delay_button_ui"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wear_delay_ui" >
      </Button>
      <Button android:layout_height="wrap_content"
              android:text="@string/wear_delay_game"
              android:layout_width="wrap_content"
              android:id="@+id/wear_delay_button_game"
              style="?android:attr/buttonBarButtonStyle">
      </Button>
      <Button android:layout_height="wrap_content"
              android:text="@string/wear_delay_fastest"
              android:layout_width="wrap_content"
              android:id="@+id/wear_delay_button_fastest"
              style="?android:attr/buttonBarButtonStyle">
     </Button>
     <Button android:layout_height="wrap_content"
             android:text="@string/wear_delay_batch"
             android:id="@+id/wear_delay_button_batch"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:layout_weight="0.21" style="?android:attr/buttonBarButtonStyle">
     </Button>
     <Button android:layout_height="wrap_content"
             android:text="@string/wear_delay_cancel"
             android:id="@+id/wear_delay_button_cancel"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:layout_weight="0.21" style="?android:attr/buttonBarButtonStyle">
     </Button>
</LinearLayout>
</ScrollView>
