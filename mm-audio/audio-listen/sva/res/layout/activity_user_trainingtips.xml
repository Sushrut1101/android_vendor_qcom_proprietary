<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:layout_margin="18dp"
            style="@style/User.Text.Instructional"
            android:text="@string/user_trainingtips_instruction" />
        <TextView
            android:id="@+id/trainingtips_tv_keyphrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            style="@style/User.Text.Instructional"
            android:text="@string/user_trainingtips_recordingstipstitle" />
        <View style="@style/VoiceWakeup.Layout.SeparatorH" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:layout_margin="18dp"
            style="@style/User.Text.Instructional"
            android:text="@string/user_trainingtips_recordingstipstitle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            style="@style/User.Text.Instructional"
            android:text="@string/user_trainingtips_recordingstips" />
        <ImageView
            android:id="@+id/listitem_selectaction_appicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/offstate" >
        </ImageView>
    </LinearLayout>
    <include layout="@layout/bottombar" />
</RelativeLayout>