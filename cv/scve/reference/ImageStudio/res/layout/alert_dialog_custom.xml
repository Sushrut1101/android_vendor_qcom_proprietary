<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/top_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alert_dialog_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/cancel_hardcut_dialog"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_text_size" >
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_divider_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/top_content"
        android:layout_alignLeft="@id/top_content"
        android:layout_alignRight="@id/top_content"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal"
         >

        <Button
            android:id="@+id/alert_dialog_btn1"
            android:textColor="@drawable/button_close_text_color_selector"
            android:background="@drawable/button_close_bg_color_selector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="@dimen/dialog_body_text_size"
            android:text="@string/cancel_hardcut_stay" />

         <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_divider_color" />

        <Button
            android:id="@+id/alert_dialog_btn2"
            android:textColor="@drawable/button_close_text_color_selector"
            android:background="@drawable/button_close_bg_color_selector"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="@dimen/dialog_body_text_size"
            android:text="@string/cancel_hardcut_leave" />
    </LinearLayout>

</RelativeLayout>
