<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Icon and Title theme -->
    <style name="iconTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/IconThemeActionBarStyle</item>
        <item name="android:windowBackground">@color/bar_background</item>
        <item name="android:actionMenuTextAppearance">@style/IconThemeMenuText</item>
    </style>

    <style name="IconThemeActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/bar</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:titleTextStyle">@style/IconThemeActionBarText</item>
    </style>

    <style name="IconThemeActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="IconThemeMenuText" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Title only theme -->
    <style name="TitleTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/TitleThemeActionBarStyle</item>
        <item name="android:windowBackground">@color/bar_background</item>
        <item name="android:actionMenuTextAppearance">@style/TitleThemeMenuText</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:dropDownListViewStyle">@style/TitleThemeDropDownListView</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TitleThemePopupMenuLargeText</item>
        <item name="android:spinnerDropDownItemStyle">@style/TitleThemeSpinnerDropDownStyle</item>

<item name="android:editTextStyle">@style/TitleThemeEditText</item>
    </style>

    <style name="TitleThemePopupMenuLargeText" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/dropdown_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TitleThemeSpinnerDropDownStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/dialog_spinner_text</item>
    </style>

    <style name="TitleThemeActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/bar</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:titleTextStyle">@style/TitleThemeActionBarText</item>

    </style>

    <style name="TitleThemeActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleThemeMenuText" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Preferences theme -->
    <style name="PreferencesTheme" parent="TitleTheme">
        <item name="android:windowBackground">@drawable/background_normal</item>
    </style>

    <style name="TitleThemeDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:background">@color/dropdown_background</item>
        <item name="android:divider">@color/dropdown_divider</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

<style name="TitleThemeEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/edittext_cursor</item>
    </style>

</resources>
